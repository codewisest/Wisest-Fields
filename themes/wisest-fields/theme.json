{
	"version": 3,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"color": {
			"defaultPalette": false,
			"defaultGradients": false,
			"defaultDuotone": false,
			"custom": false,
			"customGradient": false,
			"customDuotone": false,
			"palette": [
				{
					"slug": "black",
					"color": "#1e1e1e",
					"name": "Black"
				},
				{
					"slug": "white",
					"color": "#f0f0f0",
					"name": "White"
				},
				{
					"slug": "primary",
					"color": "#023630",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#62b5ab",
					"name": "Secondary"
				},
				{
					"slug": "accent",
					"color": "#b5a462",
					"name": "Accent"
				},
				{
					"slug": "transparent",
					"color": "transparent",
					"name": "Transparent"
				}
			]
		},
		"layout": {
			"contentSize": "1200px",
			"wideSize": "1100px"
		},
		"spacing": {
			"units": [ "px", "em", "rem", "%" ]
		},
		"typography": {
			"fontFamilies": [
				{
					"name": "Manrope",
					"slug": "manrope",
					"fontFamily": "Manrope",
					"fontFace": [
						{
							"fontFamily": "Manrope",
							"fontStyle": "normal",
							"fontWeight": "400",
							"fontStretch": "normal",
							"src": "file:./assets/fonts/manrope/Manrope-Regular.ttf"
						}
					]
				}
				
			],
			"defaultFontSizes": false,
			"customFontSize": false,
			"fontSizes": [
				{
					"slug": "extra-small",
					"size": "1.1rem",
					"name": "Extra small",
					"fluid": false
				},
				{
					"slug": "x-large",
					"size": "2.75rem",
					"name": "XL",
					"fluid": {
						"min": "2.5rem",
						"max": "2.75rem"
					}
				}
			]
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--manrope)"
		},
		"color": {
			"background": "var(--wp--preset--color--white)",
			"text": "var(--wp--preset--color--black)"
		},
		"blocks": {
			"core/post-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				},
				"color": {
					"text": "var(--wp--preset--color--primary)"

				}
			}
		}
	}, 
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	]
}
