{
	"version": 3,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"color": {
			"defaultPalette": false,
			"defaultGradients": false,
			"defaultDuotone": false,
			"custom": false,
			"customGradient": false,
			"customDuotone": false,
			"palette": [
				{
					"slug": "black",
					"color": "#1e1e1e",
					"name": "Black"
				},
				{
					"slug": "white",
					"color": "#f0f0f0",
					"name": "White"
				},
				{
					"slug": "primary",
					"color": "#023630",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#62b5ab",
					"name": "Secondary"
				},
				{
					"slug": "accent",
					"color": "#b5a462",
					"name": "Accent"
				},
				{
					"slug": "transparent",
					"color": "transparent",
					"name": "Transparent"
				}
			]
		},
		"layout": {
			"contentSize": "1200px",
			"wideSize": "1100px"
		},
		"spacing": {
			"units": [ "px", "em", "rem", "%" ]
		},
		"typography": {
			"fontFamilies": [
				{
					"name": "Manrope",
					"slug": "manrope",
					"fontFamily": "Manrope",
					"fontFace": [
						{
							"fontFamily": "Manrope",
							"fontStyle": "normal",
							"fontWeight": "400",
							"fontStretch": "normal",
							"src": "file:./assets/fonts/manrope/Manrope-Regular.ttf"
						}
					]
				}
				
			],
			"defaultFontSizes": false,
			"customFontSize": false,
			"fontSizes": [
				{
					"slug": "extra-small",
					"size": "1.1rem",
					"name": "Extra small",
					"fluid": false
				},
				{
					"slug": "medium",
					"size": "1.25rem",
					"name": "Medium",
					"fluid": {
						"min": "1.25rem",
						"max": "1.5rem"
					}
				},
				{
					"slug": "large",
					"size": "2rem",
					"name": "Large",
					"fluid": {
						"min": "1.75rem",
						"max": "2rem"
					}
				},
				{
					"slug": "x-large",
					"size": "2.75rem",
					"name": "XL",
					"fluid": {
						"min": "2.5rem",
						"max": "2.75rem"
					}
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/post-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				},
				"color": {
					"text": "var(--wp--preset--color--primary)"

				}
			},
			"core/heading": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				},
				"color": {
					"text": "var(--wp--preset--color--primary)"

				}
			},
			"core/page-list": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"typography": {
								"textDecoration": "none"
							}
						}
					}
				}
			},
			"core/post-terms": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--extra-small)"
				},
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--secondary)"
						}
					}
				}
			},
			"core/search": {
				"typography": {
				}
			},
			"core/code": {
				"color": {
				"text": "#e83e8c",
				"background": "#282c34"
				},
				"typography": {
				"fontSize": "var(--wp--preset--font-size--small)",
				"fontFamily": "monospace"
				},
				"spacing": {
				"padding": "10px"
				},
				"border": {
				"radius": "5px"
				}
			},
			"core/paragraph": {
				"color": {
				"text": "var(--wp--preset--color--base)"
				
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"

				},
				"spacing": {
				"margin": {
					"top": "10px",
					"bottom": "10px"
				},
				"padding": "5px"
				}
			},
			"core/details": {
				"color": {
					"text": "var(--wp--preset--color--base)",
					"background": "var(--wp--preset--color--secondary)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--30)",
						"right": "var(--wp--preset--spacing--30)",
						"bottom": "var(--wp--preset--spacing--30)",
						"left": "var(--wp--preset--spacing--30)"
					}
				}
			},
			"core/list": {
				"color": {
					"text": "var(--wp--preset--color--base)"
				
				},
        		"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",          
					"lineHeight": "1.8"
				},
				"spacing": {
				"margin": {
					"top": "15px",
					"bottom": "15px"
				},
				"padding": "10px"
				},
				"border": {
				"radius": "5px"
				}
			},
			"core/table": {
				"color": {
				"text": "var(--wp--preset--color--base)"				
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",          
					"lineHeight": "1.5"
				},
				"spacing": {
				"margin": {
					"top": "20px",
					"bottom": "20px"
				},
				"padding": "10px"
				},
				"border": {
				"width": "1px",
				"radius": "5px",
				"style": "solid",
				"color": "var(--wp--preset--color--secondary)"
				}
			},
			"core/verse": {
				"color": {
				"text": "var(--wp--preset--color--black)",
				"background": "var(--wp--preset--color--white)"
				},
				"typography": {
				"fontSize": "var(--wp--preset--font-size--medium)",         
				"lineHeight": "1.8",
				"fontStyle": "italic"
				},
				"spacing": {
				"margin": {
					"top": "20px",
					"bottom": "20px"
				},
				"padding": "15px"
				},
				"border": {
				"radius": "8px"
				}
			},
			"core/pullquote": {
				"color": {
				"text": "var(--wp--preset--color--secondary)"
				},
				"typography": {
				"fontSize": "var(--wp--preset--font-size--medium)",         
				"lineHeight": "1.8",
				"fontStyle": "italic"
				},
				"spacing": {
				"margin": {
					"top": "20px",
					"bottom": "20px"
				},
				"padding": "15px"
				},
				"border": {
				"radius": "8px"
				}
			},
			"core/quote": {
				"color": {
				"text": "var(--wp--preset--color--secondary)"
				},
				"typography": {
				"fontSize": "var(--wp--preset--font-size--medium)",         
				"lineHeight": "1.8",
				"fontStyle": "italic"
				},
				"spacing": {
				"margin": {
					"top": "20px",
					"bottom": "20px"
				},
				"padding": "15px"
				},
				"border": {
				"radius": "8px"
				}
			},
			"core/link": {
				"color": {
				"text": "var(--wp--preset--color--black)"
				},
				"typography": {
				"fontSize": "var(--wp--preset--font-size--medium)",
				"fontWeight": "600",
				"textDecoration": "none"
				}
				
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--manrope)"
		},
		"color": {
			"background": "var(--wp--preset--color--white)",
			"text": "var(--wp--preset--color--black)"
		}
		
	}, 
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	]
}
